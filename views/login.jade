doctype html
html
	head
		meta(charset="utf-8")
		title=title
		link(rel = "stylesheet", href = "/lib/layui/css/layui.css")
		style.
			form{
				width: 400px;
				padding: 120px 160px 80px 100px;
				margin: 200px auto;
				background: #444;
				border-radius: 2px;
			}
			.layui-form-label{
				color: #fff;
			}
			.layui-input-block span{
				color: #f45;
			}
		script(src="/js/jquery-1.10.1.min.js")
		script(src="/lib/layui/layui.js")
	body
		form.layui-form(method="post", action="")
			.layui-form-item
				label.layui-form-label 用户名：
				.layui-input-block
					input.layui-input(type="text", name="userName", lay-verify="required|title", autocomplete="off", placeholder="请输入用户名")
			.layui-form-item
				label.layui-form-label 密码：
				.layui-input-block
					input.layui-input(type="password", name="password", lay-verify="required|password", autocomplete="off", placeholder="请输入密码")
			.layui-form-item
				.layui-input-block
					button.layui-btn(type="submit",lay-submit="") 立即提交
					button.layui-btn.layui-btn-primary(type="reset") 重置
			.layui-form-item
				.layui-input-block
					-if(fail == true)
						span 用户名或密码错误
		script.
			$(function(){
				layui.use(['form'], function(){
					var form = layui.form;
					form.verify({
						title: function(value){
							if(value.length < 5){
								return '用户名至少得5个字符！';
							}
						}
						,password: [/(.+){6,12}$/, '密码必须6到12位']
					});
				})
			})